<Page x:Class="PlaneGame.GameDefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PlaneGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameDefaultPage" Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="PlaneGame" Foreground="{StaticResource MaterialDesignBodyLight}" Style="{StaticResource MaterialDesignDisplay4TextBlock}"></TextBlock>
            <TextBlock HorizontalAlignment="Center" Text="Waiting for Server ..."></TextBlock>
        </StackPanel>
    </Grid>
</Page>
