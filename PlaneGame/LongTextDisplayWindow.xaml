<Window x:Class="PlaneGame.LongTextDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesignPaper}"
        xmlns:local="clr-namespace:PlaneGame"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="16" Click="Button_Click">确定</Button>
        <TextBlock VerticalAlignment="Top" Margin="16" Style="{StaticResource MaterialDesignHeadlineTextBlock}">信息</TextBlock>
        <TextBox Name="TBMain" Margin="16,64,15.6,16" AcceptsReturn="True" Style="{StaticResource MaterialDesignTextAreaTextBox}" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
    </Grid>
</Window>
