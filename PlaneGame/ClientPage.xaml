<Page x:Class="PlaneGame.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PlaneGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="ClientPage">

    <Grid>
        <md:ColorZone Mode="PrimaryDark" Padding="16" CornerRadius="3" md:ShadowAssist.ShadowDepth="Depth3" Margin="4">
            <WrapPanel>
                <Button HorizontalAlignment="Left" Name="BtnBack" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Click="BtnBack_Click">
                    <md:PackIcon Kind="ChevronLeft"></md:PackIcon>
                </Button>
                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}" Margin="4">已连接到服务器</TextBlock>
            </WrapPanel>
        </md:ColorZone>
        <StatusBar VerticalAlignment="Bottom">
            <TextBlock>已连接</TextBlock>
            <Separator>
                
            </Separator>
            <TextBlock>
                就绪
            </TextBlock>
        </StatusBar>
    </Grid>
</Page>
