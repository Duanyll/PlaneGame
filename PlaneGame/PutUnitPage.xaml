<Page x:Class="PlaneGame.PutUnitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlaneGame"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PutUnitPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <local:GameBoardView x:Name="GVMain" Grid.Column="1"></local:GameBoardView>
        <md:ColorZone Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Mode="PrimaryLight" md:ShadowAssist.ShadowDepth="Depth3"></md:ColorZone>
    </Grid>
</Page>
