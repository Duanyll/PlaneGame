<Page x:Class="PlaneGame.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PlaneGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <materialDesign:Card Margin="80,20,80,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="120" Width="644">
            <TextBlock Style="{StaticResource MaterialDesignDisplay4TextBlock}" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="PlaneGame" VerticalAlignment="Center"/>
        </materialDesign:Card>
        <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" Header="开始游戏" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Width="200">
            <StackPanel>
                <Button x:Name="BtnNewGame" Content="新游戏" Margin="0,5"/>
                <Button Content="加入游戏" Margin="0,5"></Button>
                <Button x:Name="BtnSettings" Style="{StaticResource MaterialDesignRaisedAccentButton}" Content="设置" Margin="0,5"/>
                <Button x:Name="BtnAbout" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,5" Content="关于" Click="AboutButton_Click"/>
            </StackPanel>
        </GroupBox>
        <Button Style="{StaticResource MaterialDesignFloatingActionButton}" Margin="0,0,10,9.6" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <materialDesign:PackIcon Kind="HelpCircle" Width="30" Height="30"></materialDesign:PackIcon>
        </Button>
    </Grid>
</Page>
